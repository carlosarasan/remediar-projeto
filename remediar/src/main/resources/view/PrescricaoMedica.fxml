<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo2.controller.PrescricaoController"
            prefWidth="850" prefHeight="600"
            style="-fx-background-color: #f0f4f8;">

    <top>
        <Label text="Prescrição Médica"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="12" alignment="CENTER">
            <padding>
                <Insets top="10" right="30" bottom="10" left="30"/>
            </padding>

            <TextField fx:id="idPacienteField" promptText="ID do Paciente" prefWidth="400"/>
            <TextField fx:id="idMedicamentoField" promptText="ID do Medicamento" prefWidth="400"/>
            <TextField fx:id="dosagemField" promptText="Dosagem" prefWidth="400"/>
            <TextField fx:id="frequenciaField" promptText="Frequência" prefWidth="400"/>
            <TextField fx:id="horarioField" promptText="Horário" prefWidth="400"/>
            <TextField fx:id="duracaoField" promptText="Duração / Data de Término" prefWidth="400"/>
            <TextField fx:id="medicoField" promptText="Médico Responsável" prefWidth="400"/>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Salvar" onAction="#salvarPrescricao" style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
                <Button text="Atualizar" onAction="#atualizarPrescricao" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                <Button text="Excluir" onAction="#excluirPrescricao" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Button text="Voltar" onAction="#voltarTelaInicial"/>
            </HBox>

            <TableView fx:id="tabelaPrescricoes" prefHeight="250" prefWidth="800">
                <columns>
                    <TableColumn fx:id="colId" text="ID" prefWidth="50"/>
                    <TableColumn fx:id="colPaciente" text="Paciente" prefWidth="100"/>
                    <TableColumn fx:id="colMedicamento" text="Medicamento" prefWidth="100"/>
                    <TableColumn fx:id="colDosagem" text="Dosagem" prefWidth="100"/>
                    <TableColumn fx:id="colFrequencia" text="Frequência" prefWidth="100"/>
                    <TableColumn fx:id="colHorario" text="Horário" prefWidth="100"/>
                    <TableColumn fx:id="colDuracao" text="Duração" prefWidth="100"/>
                    <TableColumn fx:id="colMedico" text="Médico Responsável" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
