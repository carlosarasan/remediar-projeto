<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.example.demo2.controller.PacienteController"
            prefWidth="800" prefHeight="500" style="-fx-background-color: #f5f7fa;">

    <top>
        <Label text="Cadastro de Pacientes"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20;"
               BorderPane.alignment="CENTER"/>
    </top>

    <center>
        <VBox spacing="15" alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" right="30" bottom="10" left="30"/>
            </padding>

            <TextField fx:id="nomeField" promptText="Nome Completo" prefWidth="400"/>
            <TextField fx:id="cpfField" promptText="CPF" prefWidth="400"/>
            <TextField fx:id="nascimentoField" promptText="Data de Nascimento" prefWidth="400"/>
            <TextField fx:id="enderecoField" promptText="Endereço" prefWidth="400"/>
            <TextField fx:id="telefoneField" promptText="Telefone" prefWidth="400"/>
            <TextArea fx:id="historicoField" promptText="Histórico Clínico (opcional)" prefWidth="400" prefRowCount="3"/>

            <HBox spacing="15" alignment="CENTER">
                <Button text="Salvar" onAction="#salvarPaciente" style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                <Button text="Atualizar" onAction="#atualizarPaciente" style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
                <Button text="Excluir" onAction="#excluirPaciente" style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
                <Button text="Voltar" onAction="#voltarTelaInicial"/>
            </HBox>

            <TableView fx:id="tabelaPacientes" prefHeight="200" prefWidth="700">
                <columns>
                    <TableColumn fx:id="colNome" text="Nome" prefWidth="175"/>
                    <TableColumn fx:id="colCpf" text="CPF" prefWidth="150"/>
                    <TableColumn fx:id="colNascimento" text="Nascimento" prefWidth="150"/>
                    <TableColumn fx:id="colTelefone" text="Telefone" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>
    </center>
</BorderPane>
