<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            xmlns="http://javafx.com/javafx"
            fx:controller="com.example.demo2.controller.BuscaController"
            prefWidth="850" prefHeight="600"
            style="-fx-background-color: #f0f4f8;">

    <!-- Topo: Título -->
    <top>
        <Label text="Tela de Busca"
               style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-padding: 20;"
               BorderPane.alignment="CENTER"/>
    </top>

    <!-- Centro: Formulário de busca -->
    <center>
        <VBox alignment="CENTER" spacing="25">
            <padding>
                <Insets top="10" right="40" bottom="10" left="40"/>
            </padding>

            <!-- Seção: Paciente -->
            <VBox spacing="10">
                <Label text="Buscar Paciente" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="nomePacienteField" promptText="Nome do Paciente" prefWidth="300"/>
                    <Button text="Buscar por Nome" onAction="#buscarPacientePorNome"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="cpfField" promptText="CPF do Paciente" prefWidth="300"/>
                    <Button text="Buscar por CPF" onAction="#buscarPacientePorCPF"
                            style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <!-- Seção: Medicamento -->
            <VBox spacing="10">
                <Label text="Buscar Medicamento" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="nomeMedicamentoField" promptText="Nome do Medicamento" prefWidth="300"/>
                    <Button text="Buscar por Nome" onAction="#buscarMedicamentoPorNome"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                </HBox>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="finalidadeField" promptText="Finalidade" prefWidth="300"/>
                    <Button text="Buscar por Finalidade" onAction="#buscarMedicamentoPorFinalidade"
                            style="-fx-background-color: #2ecc71; -fx-text-fill: white;"/>
                </HBox>
            </VBox>

            <!-- Resultados -->
            <TextArea fx:id="resultadoArea" prefRowCount="10" prefWidth="700"
                      wrapText="true"
                      style="-fx-control-inner-background: #ffffff; -fx-font-size: 14px;"/>

        </VBox>
    </center>

    <!-- Rodapé: Botão de voltar -->
    <bottom>
        <HBox alignment="CENTER" BorderPane.alignment="CENTER">
            <padding>
                <Insets top="10" bottom="20"/>
            </padding>
            <Button text="Voltar"
                    onAction="#voltarInicio"
                    style="-fx-background-color: #95a5a6; -fx-text-fill: white;"/>
        </HBox>
    </bottom>

</BorderPane>
